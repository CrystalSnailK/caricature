/* pages/search/search.wxss */
page{
  background-color: #f2f2f2;
  width: 100%;
  padding: 10px;
  box-sizing: border-box;
}
.search_wrapper{
  border-radius: 20px;
  background-color:#ffffff;
  width: 100%;
  height: 30px;
  border:1px solid #c7c7c7
}
.search{
  display: flex;

  /* justify-content: center; */
  align-items: center;
}
.search_img
{
  width: 20px;
  height: 20px;
  margin-left: 10px;
  margin-top: 5px;
  margin-right: 15px;
}
.search_ipt{
  margin-top: 5px;

}
.hotList{
  width:100%;
  background-color: #fcfcfc;
  margin-top: 100px;
  border-radius: 20px;  
  background-image: url(https://tn1-f2.kkmh.com/image/230606/CPuVwACad.webp-w320.w.jpg);
}
/*背景图片透明度设计*/
.ChartCanvas{
	background:rgba(255, 255, 255, 0.678);/*关键点*/
}
.hotList_title{
  font-size: 25px;
  font-weight: 1000;
  height: 35px;
  margin-left: 20px;
  color: rgb(0, 0, 0);
}

.hotList_body{
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  color: rgb(48, 48, 48);
}
.hotList_list{
  margin: 10px;
  width: 10%;
}
.hotList_searchWord{
  font-size: 18px;
}
.index{
  margin-right: 5px;
}
.active{
  color: red;
  font-weight: 900;
}
.aaa{
  font-weight: 900;
}
.history{
  width: 100%;
  margin-top: 20px;
}
.history_title{
  font-weight: 900;
}
.match{
  /* margin-top: -2px; */
  /* padding-top:10px ; */
  background-color: white;
  border-radius: 5px;
  width: 100%;
  /* height: 50%; */
}
.match_list{
  border-bottom: 1px solid #eee;
  height: 40px;
  line-height: 50px;
  display: flex;
}
.search_image{
  width: 20px;
  height: 20px;
  margin-left: 10px;
  margin-top: 10px;
  margin-right: 15px;
}
.history_list{
  display: flex;
  flex-wrap: wrap;
}
.history_list_item{
  background-color: #fff;
  margin: 10px 5px;
  width: 100px;
  text-align: center;
  border-radius: 10px;
}
.songList{
  padding: 10px;
  box-sizing: border-box;
  /* background-color: red; */
}
.song_item{
  display: flex;
  margin-top: 5px;
}
.song_item_img{
  width: 60px;
  height: 60px;
}
.name{
  display: flex;
  flex-direction: column;
  margin-left: 10px;
  width: 70%;
}
.name view{
  flex: 1;
}
